@page "{id:int}"
@using Restaurant.Website.Shared
@model EditLocationModel
@{
    ViewData["Title"] = "Edit Location";
}

<section class="container mx-auto py-8">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-4xl font-semibold mb-4">Edit Location</h1>
            <p class="text-xl font-light">Edit a location to display in the restaurant</p>
        </div>
        <div class="inline-block bg-red-600 shadow-md rounded hover:bg-red-500 active:bg-red-700 active:shadow-none active:translate-y-1 transition-all">
            <a class="block py-3 px-6 text-white font-semibold" href="/locations/deletelocation/@Model.location!.Id">Delete Location</a>
        </div>
    </div>
    <form class="mt-8" method="post">
        <div class="flex flex-col max-w-80 gap-2 text-xl mb-2">
            <label class="font-semibold">Name</label>
            <input class="px-2 py-2 rounded" asp-for="location!.Name" />
            <span asp-validation-for="location!.Name" class="text-md text-red-600"></span>
        </div>
        <div class="flex flex-col max-w-80 gap-2 text-xl mb-2">
            <label class="font-semibold">Phone</label>
            <input class="px-2 py-2 rounded" asp-for="location!.Phone" />
            <span asp-validation-for="location!.Phone" class="text-md text-red-600"></span>
        </div>
        <div class="flex flex-col max-w-80 gap-2 text-xl mb-2">
            <label class="font-semibold">Street Address</label>
            <input class="px-2 py-2 rounded" asp-for="location!.StreetAddress" />
            <span asp-validation-for="location!.StreetAddress" class="text-md text-red-600"></span>
        </div>
        <div class="flex flex-col max-w-80 gap-2 text-xl mb-2">
            <label class="font-semibold">City</label>
            <input class="px-2 py-2 rounded" asp-for="location!.City" />
            <span asp-validation-for="location!.City" class="text-md text-red-600"></span>
        </div>
        <div class="flex flex-col max-w-96 gap-2 text-xl mb-2">
            <label class="font-semibold">State</label>
            <select asp-for="location!.State" class="px-2 py-2 rounded">
                <option disabled selected>Select a state</option>
                @foreach(string state in Constants.States)
                {
                    <option value="@state">@state</option>
                }
            </select>
            <span asp-validation-for="location!.State" class="text-md text-red-600"></span>
        </div>
        <div class="flex flex-col max-w-96 gap-2 text-xl">
            <label class="font-semibold">Zipcode</label>
            <input asp-for="location!.ZipCode" class="px-2 py-2 rounded" />
            <span asp-validation-for="location!.ZipCode" class="text-md text-red-600"></span>
        </div>
        <input type="hidden" name="id" value="@Model.location!.Id" />
        <input class="mt-8 inline-block bg-sky-600 shadow-md rounded hover:bg-sky-500 active:bg-sky-700 active:shadow-none active:translate-y-1 transition-all py-3 px-6 text-white font-semibold" value="Update Location" type="submit" />
    </form>
</section>