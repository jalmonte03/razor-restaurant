@inject ILocationService locationService
@{
    IEnumerable<Location> locations = locationService.GetLocations().Take(3);
}
<section class="container mx-auto py-8">
    <h2 class="text-[32px] font-semibold">Our Locations</h2>
    <p>Check all the places you can reach us!</p>
    <div class="flex justify-around my-8">
        @foreach(Location location in locations)
        {
            <div class="bg-slate-200 p-4 text-center space-y-4 shadow-lg rounded max-w-xs">
                <div class="h-[150px]">
                    <img class="object-cover w-full h-full" src="/img/restaurant-outdoor.jpg" alt="food dish" />
                </div>
                <h3 class="text-xl font-semibold">@location.Name</h3>
                <div>
                    <p>@location.Phone</p>
                    <p>@location.StreetAddress @location.City, @location.State @location.ZipCode</p>
                </div>
                <div class="inline-block bg-sky-400 shadow-md rounded hover:bg-sky-300 active:bg-sky-600 active:shadow-none active:translate-y-1 transition-all">
                    <a class="block py-3 px-6" href="/locations/locationdetails/@location.Id">View</a>
                </div>
            </div>
        }     
    </div>
</section>