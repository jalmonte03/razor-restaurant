@inject IDishService DishService
@{
    IEnumerable<Dish> dishes = await DishService.GetDishes();
    var takeThree = dishes.Take(3);
}
<section class="container mx-auto py-8">
    <h2 class="text-[32px] font-semibold">Our Menu</h2>
    <p>Enjoy our excellent recipe our restaurant can offer</p>
    <div class="flex justify-around my-8">
        @foreach(Dish dish in takeThree)
        {
            <div class="bg-slate-200 p-4 text-center space-y-4 shadow-lg rounded max-w-xs">
                <div class="h-[150px]">
                    <img class="object-cover w-full h-full" src="/img/food-dish.jpg" alt="food dish" />
                </div>
                <h3 class="text-xl font-semibold">@dish.Name</h3>
                <div>
                    <p>@dish.Ingredients</p>
                    <p>@dish.Calories Calories</p>
                </div>
                <div class="inline-block bg-sky-400 shadow-md rounded hover:bg-sky-300 active:bg-sky-600 active:shadow-none active:translate-y-1 transition-all">
                    <a class="block py-3 px-6" href="/menu/dishdetails/@dish.Id">View</a>
                </div>
            </div>
        }  
    </div>
</section>