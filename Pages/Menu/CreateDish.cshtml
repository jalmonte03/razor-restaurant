@page
@model CreateDishModel
@{
    ViewData["Title"] = "Create Dish";
}

<section class="container mx-auto py-8">
    <h1 class="text-4xl font-semibold mb-4">Create New Dish</h1>
    <p class="text-xl font-light">Create a brand new dish to display in the restaurant</p>
    <div>@ViewData["message"]</div>
    <form class="mt-8" method="post">
        <div class="flex flex-col max-w-80 gap-2 text-xl">
            <label class="font-semibold">Name</label>
            <input class="px-2 py-2 rounded" asp-for="Dish.Name" />
            <span asp-validation-for="Dish.Name"></span>
        </div>
        <div class="flex flex-col max-w-80 gap-2 text-xl">
            <label class="font-semibold">Price</label>
            <input class="px-2 py-2 rounded" asp-for="Dish.Price" />
            <span asp-validation-for="Dish.Price"></span>
        </div>
        <div class="flex flex-col max-w-80 gap-2 text-xl">
            <label class="font-semibold">Calories</label>
            <input class="px-2 py-2 rounded" asp-for="Dish.Calories" />
            <span asp-validation-for="Dish.Calories"></span>
        </div>
        <div class="flex flex-col max-w-80 gap-2 text-xl">
            <label class="font-semibold">Image Url</label>
            <input class="px-2 py-2 rounded" asp-for="Dish.Image" />
            <span asp-validation-for="Dish.Image"></span>
        </div>
        <div class="flex flex-col max-w-96 gap-2 text-xl">
            <label class="font-semibold">Ingredients</label>
            <textarea class="px-2 py-2 rounded" asp-for="Dish.Ingredients"></textarea>
            <span asp-validation-for="Dish.Ingredients"></span>
        </div>
        <input class="mt-8 inline-block bg-sky-600 shadow-md rounded hover:bg-sky-500 active:bg-sky-700 active:shadow-none active:translate-y-1 transition-all py-3 px-6 text-white font-semibold" value="Create New Dish" type="submit" />
    </form>
</section>